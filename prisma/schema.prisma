generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["reader", "writer"]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("reader")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("reader")
}

model UserWriter {
  id        Int           @id @default(autoincrement())
  email     String        @unique
  name      String?
  posts     PostWriter[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("User")
  @@schema("writer")
}

model PostWriter {
  id        Int         @id @default(autoincrement())
  title     String
  content   String?
  published Boolean     @default(false)
  author    UserWriter  @relation(fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("Post")
  @@schema("writer")
}
